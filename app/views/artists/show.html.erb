
<main>

<h2><%= @artist.name %></h2>
<p><%= @artist.bio %></p>
<img src= "<%= @artist.img_url %>">
<a href="<%= @artist.music_url %>">Link too Music</a>

<%= link_to "Edit This Artist", edit_artist_path %>

<section>
  Upcoming Shows <%= link_to "New Show", new_artist_performance_path(@artist) %>
  <div class="perf">
  <% @performances.each do |perf| %>
  <img src="<%= perf.show.flyer_img %>">
  <%= perf.show.date.strftime("%A, %m/%d") %>
  <% end %>
</div>
</section>
</main>
